@model DTO.SanPhamDTO
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-6">
        <img src="@Model.HinhAnh" class="img-fluid" />
    </div>
    <div class="col-md-6">
        <h3>@Model.TenSP</h3>
        <p>Giá: <strong>@Model.DonGia.ToString("N0") đ</strong></p>
        <p>@Model.MoTa</p>
        <a href="/GioHang/Add?productId=@Model.MaSP" class="btn btn-success">Thêm vào giỏ</a>
    </div>
</div>
